<footer class="footer-main">
  <div class="footer-container">
    <div class="footer-sec-1">
      {%- if linklists.footer-menu and linklists.footer-menu.links.size > 0 -%}
        <!-- Dividir los enlaces del footer-menu en columnas -->
        {% assign links_per_column = linklists.footer-menu.links.size | divided_by: 4 | ceil %}

        {% for i in (0..3) %}
          <div class="footer-column">
            <h4 class="footer-heading">Enlaces {{ i | plus: 1 }}</h4>
            <ul class="footer-links">
              {% assign start_index = i | times: links_per_column %}
              {% assign end_index = start_index | plus: links_per_column | minus: 1 %}

              {% for j in (start_index..end_index) %}
                {% if linklists.footer-menu.links[j] %}
                  <li>
                    <a href="{{ linklists.footer-menu.links[j].url }}">
                      {{ linklists.footer-menu.links[j].title | escape }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      {%- else -%}
        <!-- Fallback si no hay footer-menu configurado -->
        <div class="footer-column">
          <h4 class="footer-heading">Enlaces</h4>
          <ul class="footer-links">
            <li>
              <a href="/">Inicio</a>
            </li>
            <li>
              <a href="/about">Acerca de</a>
            </li>
            <li>
              <a href="/contact">Contacto</a>
            </li>
          </ul>
        </div>
      {%- endif -%}
    </div>
  </div>

  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-sec-2">
        <p>Guias</p>
        <p>Términos de venta</p>
        <p>Términos de uso</p>
        <p>Política de privacidad</p>
      </div>
      <div class="footer-copyright">
        <p>&copy; {{ 'now' | date: "%Y" }} Todos los derechos reservados</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-main {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    padding: 0;
    font-family: var(--font-body);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-sec-1 {
    margin-top: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 50px 0 30px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-column {
    flex: 1;
    min-width: 200px;
    padding: 0 15px;
    margin-bottom: 30px;
  }

  .footer-heading {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    font-family: var(--font-heading);
    margin: 0 0 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .footer-column p {
    margin: 0 0 12px;
    opacity: 0.8;
    transition: opacity 0.3s ease;
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
  }

  .footer-column p:hover {
    opacity: 1;
    cursor: pointer;
  }

  .footer-sec-1 ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-sec-1 li {
    margin-bottom: 12px;
  }

  .footer-sec-1 a {
    color: inherit;
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.3s ease;
    font-family: var(--font-body);
    font-size: var(--font-size-sm);
  }

  .footer-sec-1 a:hover {
    opacity: 1;
  }

  .footer-bottom {
    background: rgba(0, 0, 0, 0.2);
  }

  .footer-sec-2 {
    display: flex;
    flex-wrap: wrap;
    padding: 20px 0;
  }

  .footer-sec-2 p {
    padding: 10px 15px 10px 0;
    margin: 0;
    font-size: var(--font-size-sm);
    font-family: var(--font-body);
    opacity: 0.7;
  }

  .footer-copyright {
    margin-left: auto;
    display: flex;
    align-items: center;
  }

  .footer-copyright p {
    font-size: var(--font-size-sm);
    font-family: var(--font-body);
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .footer-sec-1 {
      flex-direction: column;
    }

    .footer-column {
      width: 100%;
      margin-bottom: 30px;
    }

    .footer-bottom .footer-container {
      flex-direction: column;
    }

    .footer-sec-2 {
      justify-content: center;
    }

    .footer-copyright {
      margin: 10px auto 0;
    }
  }
</style>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text",
        "default": "#F4F4F4"
      },
      {
        "type": "paragraph",
        "content": "Los enlaces del footer se gestionan desde el menú 'footer-menu' en la configuración de navegación de la tienda."
      }
    ],
    "presets": [
      {
        "name": "footer"
      }
    ]
  }
{% endschema %}