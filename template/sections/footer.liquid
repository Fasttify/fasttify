<footer class="footer-main">
  <div class="footer-sec-1">
    {%- if section.blocks.size == 0 -%}
      <div>
        <p>Guides</p>
        <p>Terms of Sale</p>
        <p>Terms of Use</p>
        <p>Privacy Policy</p>
        <p>Guides</p>
        <p>Terms of Sale</p>
      </div>
      <div>
        <p>Guides</p>
        <p>Terms of Sale</p>
        <p>Terms of Use</p>
        <p>Privacy Policy</p>
        <p>Guides</p>
        <p>Terms of Sale</p>
      </div>
      <div>
        <p>Guides</p>
        <p>Terms of Sale</p>
        <p>Terms of Use</p>
        <p>Privacy Policy</p>
        <p>Guides</p>
        <p>Terms of Sale</p>
      </div>

      <div>
        <p>Guides</p>
        <p>Terms of Sale</p>
        <p>Terms of Use</p>
        <p>Privacy Policy</p>
        <p>Guides</p>
        <p>Terms of Sale</p>
      </div>

    {% else %}
      <!-- Dividir los enlaces en columnas -->
      {% assign blocks_per_column = section.blocks.size | divided_by: 4 | ceil %}
      
      {% for i in (0..3) %}
        <div>
          <ul>
            {% assign start_index = i | times: blocks_per_column %}
            {% assign end_index = start_index | plus: blocks_per_column | minus: 1 %}
            
            {% for j in (start_index..end_index) %}
              {% if section.blocks[j] %}
                <li>
                  <a href="{{ section.blocks[j].settings.link }}">
                    {{ section.blocks[j].settings.text | escape }}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    {% endif %}
  </div>
  <div class="footer-sec-2">
    <p>Guides</p>
    <p>Terms of Sale</p>
    <p>Terms of Use</p>
    <p>Privacy Policy</p>
  </div>
</footer>

<style>
  .footer-main {
    background: {{ section.settings.background }}
    ;
    color: {{ section.settings.text_color }}
    ;
    padding: 10px;
  }
  .footer-sec-1 {
    margin-top: 20px;
    display: flex;
    justify-content: space-around;
  }

  .footer-sec-1 ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-sec-1 li {
    margin-bottom: 8px;
  }

  .footer-sec-1 a {
    color: inherit;
    text-decoration: none;
  }

  .footer-sec-1 a:hover {
    text-decoration: underline;
  }

  .footer-sec-2 {
    display: flex;
  }
  .footer-sec-2 p {
    padding: 10px
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#F4F4F4"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}
