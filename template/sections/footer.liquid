<footer class="footer-main">
  <div class="footer-container">
    <div class="footer-sec-1">
      {%- if section.blocks.size == 0 -%}
        <div class="footer-column">

      {% else %}
        <!-- Dividir los enlaces en columnas -->
        {% assign blocks_per_column = section.blocks.size | divided_by: 4 | ceil %}
        
        {% for i in (0..3) %}
          <div class="footer-column">
            <h4 class="footer-heading">Enlaces {{ i | plus: 1 }}</h4>
            <ul class="footer-links">
              {% assign start_index = i | times: blocks_per_column %}
              {% assign end_index = start_index | plus: blocks_per_column | minus: 1 %}
              
              {% for j in (start_index..end_index) %}
                {% if section.blocks[j] %}
                  <li>
                    <a href="{{ section.blocks[j].settings.link }}">
                      {{ section.blocks[j].settings.text | escape }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
  
  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-sec-2">
        <p>Guias</p>
        <p>Términos de venta</p>
        <p>Términos de uso</p>
        <p>Política de privacidad</p>
      </div>
      <div class="footer-copyright">
        <p>&copy; {{ 'now' | date: "%Y" }} Todos los derechos reservados</p>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-main {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .footer-sec-1 {
    margin-top: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 50px 0 30px;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  
  .footer-column {
    flex: 1;
    min-width: 200px;
    padding: 0 15px;
    margin-bottom: 30px;
  }
  
  .footer-heading {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 20px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }
  
  .footer-column p {
    margin: 0 0 12px 0;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }
  
  .footer-column p:hover {
    opacity: 1;
    cursor: pointer;
  }
  
  .footer-sec-1 ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-sec-1 li {
    margin-bottom: 12px;
  }

  .footer-sec-1 a {
    color: inherit;
    text-decoration: none;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .footer-sec-1 a:hover {
    opacity: 1;
  }
  
  .footer-bottom {
    background: rgba(0,0,0,0.2);
  }
  
  .footer-sec-2 {
    display: flex;
    flex-wrap: wrap;
    padding: 20px 0;
  }
  
  .footer-sec-2 p {
    padding: 10px 15px 10px 0;
    margin: 0;
    font-size: 14px;
    opacity: 0.7;
  }
  
  .footer-copyright {
    margin-left: auto;
    display: flex;
    align-items: center;
  }
  
  .footer-copyright p {
    font-size: 14px;
    opacity: 0.7;
  }
  
  @media (max-width: 768px) {
    .footer-sec-1 {
      flex-direction: column;
    }
    
    .footer-column {
      width: 100%;
      margin-bottom: 30px;
    }
    
    .footer-bottom .footer-container {
      flex-direction: column;
    }
    
    .footer-sec-2 {
      justify-content: center;
    }
    
    .footer-copyright {
      margin: 10px auto 0;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#F4F4F4"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer"
    }
  ]
}
{% endschema %}
