<section class="more-info">
  <div class="more-info-wrapper">
    {%- if section.settings.text != blank -%}
      <h1>{{ section.settings.text }}</h1>
    {%- else -%}
      <h1>{{ block.settings.text | escape }}</h1>
    {%- endif -%}

    {%- if section.settings.text2 != blank -%}
      <p>{{ section.settings.text2 }}</p>
    {%- else -%}
      <p>{{ block.settings.text2 | escape }}</p>
    {%- endif -%}

    <a href="{{ section.settings.button_link | default: '#' }}" class="info-button">
      {{ section.settings.button_text | default: "Shop Now" }}
    </a>
  </div>
</section>

<style>
  .more-info {
    background: {{ section.settings.background }};
    color: {{ section.settings.text_color }};
    display: flex;
    justify-content: center;
    align-items: center;
    padding: {{ section.settings.section_padding }}px 20px;
    text-align: center;
    position: relative;
  }

  .more-info-wrapper {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: {{ section.settings.content_width }}px;
    justify-content: center;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .more-info-wrapper h1 {
    font-size: clamp(32px, 5vw, {{ section.settings.heading_size }}px);
    line-height: 1.2;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 20px;
    letter-spacing: {{ section.settings.heading_spacing }}px;
    text-transform: {{ section.settings.heading_transform }};
  }

  .more-info-wrapper p {
    font-size: clamp(16px, 2vw, {{ section.settings.text_size }}px);
    line-height: 1.5;
    margin: 0 0 30px;
    max-width: 90%;
    opacity: 0.9;
  }

  .info-button {
    padding: 14px 32px;
    background-color: {{ section.settings.button_color }};
    border: 2px solid {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: {{ section.settings.button_radius }}px;
    cursor: pointer;
    font-weight: 600;
    font-size: 16px;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .info-button:hover {
    background-color: {{ section.settings.button_hover_color }};
    border-color: {{ section.settings.button_hover_color }};
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  @media screen and (max-width: 768px) {
    .more-info {
      padding: {{ section.settings.section_padding | divided_by: 1.5 }}px 20px;
    }
    
    .more-info-wrapper p {
      margin-bottom: 25px;
    }
  }
</style>

{% schema %}
{
  "name": "Información adicional",
  "settings": [
    {
      "type": "header",
      "content": "Contenido"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Título",
      "default": "THE RESOLUTIONS STARTER PACK"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Descripción",
      "default": "Go for all your fitness goals with a curated collection of new kicks breathable apparel, and more supportive styles"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "header",
      "content": "Estilo de sección"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Color de fondo",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de texto",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Espacio vertical",
      "min": 40,
      "max": 200,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Ancho del contenido",
      "min": 400,
      "max": 900,
      "step": 50,
      "default": 600
    },
    {
      "type": "header",
      "content": "Estilo del título"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Tamaño de título",
      "min": 24,
      "max": 72,
      "step": 2,
      "default": 50
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Peso de fuente",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semibold"
        },
        {
          "value": "700",
          "label": "Bold"
        },
        {
          "value": "800",
          "label": "Extrabold"
        }
      ],
      "default": "700"
    },
    {
      "type": "range",
      "id": "heading_spacing",
      "label": "Espaciado de letras",
      "min": 0,
      "max": 5,
      "step": 0.5,
      "default": 1
    },
    {
      "type": "select",
      "id": "heading_transform",
      "label": "Transformación",
      "options": [
        {
          "value": "none",
          "label": "Ninguna"
        },
        {
          "value": "uppercase",
          "label": "MAYÚSCULAS"
        },
        {
          "value": "lowercase",
          "label": "minúsculas"
        },
        {
          "value": "capitalize",
          "label": "Primera Letra Mayúscula"
        }
      ],
      "default": "uppercase"
    },
    {
      "type": "header",
      "content": "Estilo del texto"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Tamaño de texto",
      "min": 14,
      "max": 24,
      "step": 1,
      "default": 18
    },
    {
      "type": "header",
      "content": "Estilo del botón"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color de fondo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Color de texto",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Color al pasar el cursor",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "button_radius",
      "label": "Redondeo de bordes",
      "min": 0,
      "max": 40,
      "step": 1,
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Información adicional",
      "category": "Texto"
    }
  ]
}
{% endschema %}
