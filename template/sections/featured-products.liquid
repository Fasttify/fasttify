<section class='py-16 bg-white'>
    <div class='container mx-auto px-4'>
        {% if section.settings.heading %}
        <div class='text-center mb-12'>
            <h2 class='text-4xl font-bold text-gray-900 mb-4'>{{ section.settings.heading }}</h2>
            <div class='w-24 h-1 bg-blue-600 mx-auto'></div>
        </div>
        {% endif %}

        <!-- И TEST: Using paginate tag -->
        {% paginate products by section.settings.products_to_show %}
            <div class='grid grid-cols-{{ section.settings.columns_mobile }} md:grid-cols-{{ section.settings.columns_desktop }} gap-6'>
            {% for product in paginate.collection %}
            <div
                class='bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 group'>
                <!-- Imagen del producto -->
                <div class='relative overflow-hidden'>
                    {% if product.images and product.images.size > 0 %}
                    <img src='{{ product.images[0].url }}' alt='{{ product.name }}'
                        class='w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300'
                        width='400' height='256'>
                    {% else %}
                    <div class='w-full h-64 bg-gray-200 flex items-center justify-center'>
                        <svg class='w-16 h-16 text-gray-400' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                    {% endif %}

                    <!-- Badge de destacado -->
                    {% if product.featured %}
                    <div
                        class='absolute top-4 left-4 bg-red-500 text-white px-2 py-1 rounded-full text-sm font-semibold'>
                        Destacado
                    </div>
                    {% endif %}
                </div>

                <!-- Informaci贸n del producto -->
                <div class='p-6'>
                    <h3 class='text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors'>
                        {{ product.name }}
                    </h3>

                    {% if section.settings.show_description and product.description %}
                    <p class='text-gray-600 mb-4 line-clamp-2'>
                        {{ product.description | truncate: 100 }}
                    </p>
                    {% endif %}

                    {% if section.settings.show_price %}
                    <div class='flex items-center justify-between mb-4'>
                        <div class='flex items-center space-x-2'>
                            {% if product.compareAtPrice and product.compareAtPrice > product.price %}
                            <span class='text-lg font-bold text-red-600'>{{ product.price }}</span>
                            <span class='text-sm text-gray-500 line-through'>{{ product.compareAtPrice -}}
                            </span>
                            {% else %}
                            <span class='text-lg font-bold text-gray-900'>{{ product.price }}</span>
                            {% endif %}
                        </div>

                        {% if product.quantity and product.quantity <= 5 %} <span
                            class='text-sm text-orange-600 font-medium'>
                            隆Solo {{ product.quantity }} disponibles!
                            </span>
                            {% endif %}
                    </div>
                    {% endif %}

                    <!-- Botones de acci贸n -->
                    <div class='flex space-x-2'>
                        <button class='btn-primary flex-1 py-2 px-4 rounded-lg font-semibold transition-all'
                            onclick="addToCart('{{ product.id }}', '{{ product.name }}', {{ product.price }})">
                            Agregar al carrito
                        </button>
                        <a href='/productos/{{ product.slug | default: product.id }}'
                            class='border border-gray-300 text-gray-700 hover:bg-gray-50 py-2 px-4 rounded-lg font-semibold transition-all'>
                            Ver detalles
                        </a>
                    </div>
                </div>
            </div>
            {% endfor %}
            </div>

            <!-- И TEST: Pagination controls -->
            {% if paginate.pages > 1 %}
                <div class='flex justify-center items-center space-x-2 mt-8'>
                    {% if paginate.previous %}
                        <a href="{{ paginate.previous.url }}" class='px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors'>
                            芦 Anterior
                        </a>
                    {% endif %}

                    {% for part in paginate.parts %}
                        {% if part.is_link %}
                            <a href="{{ part.url }}" class='px-3 py-2 bg-white border border-gray-300 text-gray-700 rounded hover:bg-blue-500 hover:text-white transition-colors'>
                                {{ part.title }}
                            </a>
                        {% else %}
                            <span class='px-3 py-2 bg-blue-500 text-white rounded font-semibold'>
                                {{ part.title }}
                            </span>
                        {% endif %}
                    {% endfor %}

                    {% if paginate.next %}
                        <a href="{{ paginate.next.url }}" class='px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition-colors'>
                            Siguiente 禄
                        </a>
                    {% endif %}
                </div>
                
                <div class='text-center mt-4 text-sm text-gray-600'>
                    <span class='test-badge'>И TEST</span>
                    Mostrando {{ paginate.current_offset | plus: 1 }}-{{ paginate.current_offset | plus: paginate.collection.size }} de {{ paginate.collection.total_entries }} productos
                </div>
            {% endif %}
        {% endpaginate %}

        <!-- Bot贸n ver todos -->
        <div class='text-center mt-12'>
            <a href='/productos'
                class='btn-primary inline-block px-8 py-3 rounded-lg font-semibold text-lg transition-all hover:transform hover:scale-105'>
                Ver todos los productos
                <span class='test-badge ml-2'>И TEST</span>
            </a>
        </div>
    </div>
</section>


{% javascript %}
    console.log('И Featured products section loaded!');
    console.log('Section settings:', {
        heading: '{{ section.settings.heading }}',
        productsToShow: {{ section.settings.products_to_show }},
        showPrice: {{ section.settings.show_price }},
        showDescription: {{ section.settings.show_description }}
    });

    function addToCart(productId, productName, productPrice) {
        console.log(' Adding product to cart:', { productId, productName, productPrice });
        
        // Agregar producto al carrito
        const product = {
            id: productId,
            name: productName,
            price: productPrice,
            quantity: 1,
        }

        if (window.cart) {
            window.cart.add(product)

            // Mostrar notificaci贸n
            showNotification(`${productName} agregado al carrito`)
        } else {
            console.warn('锔 Cart functionality not available');
        }
    }

    function showNotification(message) {
        console.log(' Showing notification:', message);
        
        // Crear y mostrar notificaci贸n toast
        const notification = document.createElement('div')
        notification.className =
            'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transform translate-x-full transition-transform duration-300'
        
        // Add test badge to notification
        notification.innerHTML = `
            ${message} 
            <span class="test-badge ml-2" style="background: rgba(255,255,255,0.3);">И</span>
        `;

        document.body.appendChild(notification)

        // Animar entrada
        setTimeout(() => {
            notification.classList.remove('translate-x-full')
        }, 100)

        // Remover despu茅s de 3 segundos
        setTimeout(() => {
            notification.classList.add('translate-x-full')
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    document.body.removeChild(notification)
                }
            }, 300)
        }, 3000)
    }

    // И TEST: Add product hover effects
    document.addEventListener('DOMContentLoaded', function() {
        const productCards = document.querySelectorAll('.group');
        console.log(` Found ${productCards.length} product cards`);
        
        productCards.forEach((card, index) => {
            card.addEventListener('mouseenter', function() {
                console.log(` Hovering over product card ${index + 1}`);
            });
        });
    });
{% endjavascript %}

