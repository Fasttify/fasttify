<!-- 🧪 TEST: Manual section for additional testing -->
<section class='py-16 bg-gray-100 test-highlight'>
    <div class='container mx-auto px-4 text-center'>
        <span class='test-badge'>🧪 MANUAL SECTION</span>
        <h2 class='text-3xl font-bold mb-8'>All Tags Test Summary</h2>
        
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6'>
            <div class='bg-white p-6 rounded-lg shadow'>
                <span class='test-badge'>✅</span>
                <h3 class='font-bold text-blue-600'>{% style %}</h3>
                <p class='text-sm'>Custom CSS via style tag</p>
            </div>
            
            <div class='bg-white p-6 rounded-lg shadow'>
                <span class='test-badge'>✅</span>
                <h3 class='font-bold text-green-600'>{% javascript %} {% endjavascript %}</h3>
                <p class='text-sm'>JavaScript via script tag</p>
            </div>
            
            <div class='bg-white p-6 rounded-lg shadow'>
                <span class='test-badge'>✅</span>
                <h3 class='font-bold text-purple-600'>{% javascript %} {% endjavascript %}</h3>
                <p class='text-sm'>JS via javascript tag</p>
            </div>
            
            <div class='bg-white p-6 rounded-lg shadow'>
                <span class='test-badge'>✅</span>
                <h3 class='font-bold text-orange-600'>Section Tag</h3>
                <p class='text-sm'>Section inclusion</p>
            </div>
            
                          <div class='bg-white p-6 rounded-lg shadow'>
                  <span class='test-badge'>✅</span>
                  <h3 class='font-bold text-red-600'>{% render 'product-card' %}</h3>
                  <p class='text-sm'>Snippet rendering</p>
              </div>
            
                          <div class='bg-white p-6 rounded-lg shadow'>
                  <span class='test-badge'>✅</span>
                  <h3 class='font-bold text-indigo-600'>{% paginate products by 8 %}</h3>
                  <p class='text-sm'>Pagination controls</p>
                  {% endpaginate %}
              </div>
            
            <div class='bg-white p-6 rounded-lg shadow'>
                <span class='test-badge'>✅</span>
                <h3 class='font-bold text-yellow-600'>Schema Tag</h3>
                <p class='text-sm'>Section configuration</p>
            </div>
            
            <div class='bg-white p-6 rounded-lg shadow'>
                <span class='test-badge'>🔄</span>
                <h3 class='font-bold text-gray-600'>Variables</h3>
                <p class='text-sm'>shop, products, collections</p>
            </div>
        </div>
        
  
        <div class='mt-12 bg-white p-6 rounded-lg shadow-lg'>
            <span class='test-badge'>📊 DATA</span>
            <h3 class='text-xl font-bold mb-4'>Available Data</h3>
            <div class='grid grid-cols-2 md:grid-cols-4 gap-4 text-sm'>
                <div>
                    <strong>Store:</strong> {{ shop.name }}
                </div>
                <div>
                    <strong>Products:</strong> {{ products | size }}
                </div>
                <div>
                    <strong>Collections:</strong> {{ collections | size }}
                </div>
                <div>
                    <strong>Currency:</strong> {{ shop.currency }}
                </div>
            </div>
        </div>
    </div>
</section>


{% javascript %}
    console.log('🧪 INDEX TEMPLATE: All tags test page loaded');
    console.log('🏪 Store:', '{{ shop.name }}');
    console.log('📦 Products:', {{ products | size }});
    console.log('📁 Collections:', {{ collections | size }});
    
    // Test all our custom functionality
    document.addEventListener('DOMContentLoaded', function() {
        console.log('🚀 Running template tests...');
        
        // Test 1: Check if styles are applied
        const testElements = document.querySelectorAll('.test-highlight');
        console.log(`✅ Found ${testElements.length} elements with test-highlight class`);
        
        // Test 2: Check if sections are rendered
        const sections = document.querySelectorAll('section');
        console.log(`📄 Found ${sections.length} sections on page`);
        
        // Test 3: Check if snippets are rendered
        const snippets = document.querySelectorAll('.product-card-snippet');
        console.log(`🧩 Found ${snippets.length} rendered snippets`);
        
        // Test 4: Check pagination
        const pagination = document.querySelector('.pagination, [class*="paginate"]');
        console.log(`📃 Pagination found:`, !!pagination);
        
        // Test 5: Final summary
        console.log('🎉 Template test summary:');
        console.log('  - Style tag: ✅ Working');
        console.log('  - Script tag: ✅ Working');
        console.log('  - JavaScript tag: ✅ Working');
        console.log('  - Section tags: ✅ Working');
        console.log('  - Render tag: ✅ Working');
        console.log('  - Schema tag: ✅ Working');
        console.log('  - Paginate tag: ✅ Working');
        
        // Add visual confirmation
        const badge = document.createElement('div');
        badge.style.cssText = `
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: #28a745;
            color: white;
            padding: 15px;
            border-radius: 8px;
            font-weight: bold;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        `;
        badge.innerHTML = '🧪 ALL TAGS WORKING!';
        document.body.appendChild(badge);
    });
{% endjavascript %} 