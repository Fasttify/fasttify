    "name": "header",
    "settings": [],
    "blocks": [
      {
        "type": "menu_item",
        "name": "Menu Item",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Label",
            "default": "Menu Item"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
