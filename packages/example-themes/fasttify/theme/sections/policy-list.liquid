<div class="page-width">
  <div class="policy-container">
    <h1 class="policy-main-title">Políticas de la tienda</h1>
    <div class="policies-list">
      {% for policy in policies %}
        <div class="policy-item">
          <h2 class="policy-item-title">{{ policy.title }}</h2>
          <p class="policy-updated-at">
            Última actualización: {{ policy.updatedAt | date }}
          </p>
          <div class="policy-content">
            {{ policy.content }}
          </div>
        </div>
      {% else %}
        <p class="text-center">No hay políticas para mostrar.</p>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Lista de Políticas",
    "settings": []
  }
{% endschema %}

{% style %}
  .page-width {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 1rem;
  }

  .policy-main-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: 3rem;
  }

  .policy-item {
    margin-bottom: 4rem;
  }

  .policy-item-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: 0.5rem;
  }

  .policy-updated-at {
    color: #6b7280;
    font-size: var(--font-size-sm);
    margin-bottom: 2rem;
  }

  .policy-content {
    font-size: var(--font-size-base);
    line-height: 1.75;
    color: black;
  }

  .policy-content h1,
  .policy-content h2,
  .policy-content h3,
  .policy-content h4 {
    text-transform: uppercase;
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-base);
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
  }

  .policy-content p {
    margin-bottom: 1rem;
  }
{% endstyle %}