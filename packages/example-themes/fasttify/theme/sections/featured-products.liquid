<section class="featured-products-section" {{ section.fasttify_attributes }}>
  <div class="featured-products-container">
    <!-- Obtener la colección -->
    {% assign collection_handle = section.settings.collection_handle | default: 'new-products' %}
    {% assign featured_collection = collections[collection_handle] %}

    <!-- Header de la sección -->
    <div class="section-header">
      <div class="section-header-content">
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}

        {% if section.settings.section_title != blank %}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% else %}
          <h2 class="section-title">NUEVOS PRODUCTOS</h2>
        {% endif %}

        {% if section.settings.section_description != blank %}
          <p class="section-description">{{ section.settings.section_description }}</p>
        {% endif %}
      </div>

      <!-- Botón para ver todos los productos -->
      {% if section.settings.show_view_all_button and featured_collection %}
        <div class="section-header-action">
          <a href="{{ featured_collection.url }}" class="view-all-btn-header">
            <span>{{ section.settings.view_all_text | default: 'VER TODA LA COLECCIÓN' }}</span>
          </a>
        </div>
      {% endif %}
    </div>

    <!-- Grid de productos -->
    {% if featured_collection.products.size > 0 %}
      <div class="products-carousel-container">
        <!-- Botón navegación izquierda -->
        {% if section.settings.show_carousel_nav %}
          <button class="carousel-nav carousel-nav-prev" aria-label="Producto anterior">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15,18 9,12 15,6"></polyline>
            </svg>
          </button>
        {% endif %}

        <!-- Carrusel -->
        <div class="products-carousel">
          <div class="products-carousel-track">
            {% assign products_limit = section.settings.products_count | default: 8 %}
            {% comment %} Buscar el bloque de configuración de Product Card {% endcomment %}
            {% assign product_card_block = null %}
            {% for block in section.blocks %}
              {% if block.type == 'product_card' %}
                {% assign product_card_block = block %}
                {% break %}
              {% endif %}
            {% endfor %}

            {% for product in featured_collection.products limit: products_limit %}
              <div class="product-card carousel-slide" {% if product_card_block %}{{ product_card_block.fasttify_attributes }}{% endif %}>
            <!-- Imagen del producto -->
            <div class="product-image-wrapper">
              <a href="{{ product.url }}" class="product-link">
                {% if product.images.size > 1 %}
                  <!-- Con imagen secundaria: aplicar clases para el hover -->
                  <img
                    class="product-image product-image-primary"
                    src="{{ product.featured_image | img_url: 'webp', 600, 800 }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy">
                  <img
                    class="product-image product-image-secondary"
                    src="{{ product.images[1] | img_url: '600x800' }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy">
                  <!-- Indicador de múltiples imágenes -->
                  <div class="multiple-images-indicator">
                    <div class="indicator-dot active"></div>
                    <div class="indicator-dot"></div>
                    {% if product.images.size > 2 %}
                      <div class="indicator-dot"></div>
                    {% endif %}
                  </div>
                {% elsif product.images.size > 0 %}
                  <!-- Con una sola imagen: sin clases de hover -->
                  <img
                    class="product-image"
                    src="{{ product.featured_image | img_url: '600x800' }}"
                    alt="{{ product.title | escape }}"
                    loading="lazy">
                {% else %}
                  <!-- Placeholder si no hay imágenes -->
                  <div class="product-placeholder">
                    <div class="placeholder-content">
                      <svg
                        width="60"
                        height="60"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                        <circle cx="8.5" cy="8.5" r="1.5" />
                        <polyline points="21,15 16,10 5,21" />
                      </svg>
                      <p>Imagen del producto</p>
                    </div>
                  </div>
                {% endif %}
              </a>

              <!-- Product Badges -->
              {% if section.settings.show_badges %}
                <div class="product-badges">
                  {% comment %} Determinar qué badge mostrar basado en las tags del producto {% endcomment %}
                  {% if section.settings.show_new_badge %}
                    {% if product.tags contains 'new' or product.createdAt > 'now' | date: '%s' | minus: 2592000 %}
                      <span class="product-badge badge-new">{{ section.settings.new_badge_text | default: 'NEW' }}</span>
                    {% endif %}
                  {% endif %}

                  {% if section.settings.show_bestseller_badge and product.tags contains 'bestseller' %}
                    <span class="product-badge badge-bestseller">{{ section.settings.bestseller_badge_text | default: 'BESTSELLER' }}</span>
                  {% endif %}

                  {% if section.settings.show_trending_badge and product.tags contains 'trending' %}
                    <span class="product-badge badge-trending">{{ section.settings.trending_badge_text | default: 'TRENDING' }}</span>
                  {% endif %}

                  {% if section.settings.show_sale_badge and product.compare_at_price > product.price %}
                    {% assign discount_percent = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price | round %}
                    <span class="product-badge badge-sale">
                      {% if section.settings.sale_badge_text != blank %}
                        {{ section.settings.sale_badge_text | replace: '%', discount_percent }}
                      {% else %}
                        SAVE {{ discount_percent }}%
                      {% endif %}
                    </span>
                  {% endif %}
                </div>
              {% endif %}

              <!-- Overlay con botón (solo aparece en hover) -->
              <div class="product-overlay">
                <div class="product-overlay-content">
                  <a href="{{ product.url }}" class="product-btn product-btn-primary">
                    <span>{{ section.settings.button_primary_text | default: 'VER PRODUCTO' }}</span>
                  </a>

                  {% if section.settings.show_add_to_cart %}
                    <button
                      class="product-btn product-btn-secondary"
                      data-product-id="{{ product.id }}"
                      onclick="addProductToCart('{{ product.id }}', 1)"
                      aria-label="Añadir al carrito">
                      <span>{{ section.settings.button_secondary_text | default: 'AÑADIR AL CARRITO' }}</span>
                    </button>
                  {% endif %}
                </div>
              </div>
            </div>

            <!-- Información del producto -->
            <div class="product-info">
              <div class="product-vendor">{{ product.vendor | upcase }}</div>
              <h3 class="product-title">{{ product.title }}</h3>
              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                  <span class="price-current price-sale">{{ product.price | money }}</span>
                  {% else %}
                  <span class="price-current">{{ product.price | money }}</span>
                {% endif %}
              </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>

        <!-- Botón navegación derecha -->
        {% if section.settings.show_carousel_nav %}
          <button class="carousel-nav carousel-nav-next" aria-label="Producto siguiente">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,18 15,12 9,6"></polyline>
            </svg>
          </button>
        {% endif %}
      </div>



    {% else %}
      <div class="empty-state">
        <p>No hay productos disponibles en esta colección.</p>
      </div>
    {% endif %}
  </div>

  {% if section.settings.show_marquee %}
    {% render 'banner-marquee',
      background: section.settings.marquee_background | default: '#000000',
      text_color: section.settings.marquee_text_color | default: '#ffffff',
      font_size: section.settings.marquee_font_size | default: 40,
      font_weight: section.settings.marquee_font_weight | default: '700',
      text_transform: section.settings.marquee_text_transform | default: 'uppercase',
      speed: section.settings.marquee_speed | default: 20,
      padding: section.settings.marquee_padding | default: 15,
      margin_top: section.settings.marquee_margin_top | default: 50,
      text_1: section.settings.marquee_text_1 | default: 'NUEVA COLECCIÓN',
      text_2: section.settings.marquee_text_2 | default: 'ENVÍO GRATIS',
      text_3: section.settings.marquee_text_3 | default: 'CALIDAD PREMIUM' %}
  {% endif %}
</section>


