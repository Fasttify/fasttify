{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/utils/*": ["./utils/*"],
      "@/lib/*": ["./lib/*"],
      "@/amplify/*": ["./amplify/*"],
      "@/amplify_outputs.json": ["./amplify_outputs.json"],
      "@/data-schema": ["./amplify/data/resource"],
      "@/renderer-engine/*": ["./packages/renderer-engine/*"],
      "@/renderer-engine": ["./packages/renderer-engine"],
      "@/context/*": ["./context/*"],
      "@/hooks/*": ["./hooks/*"]
    },
    "incremental": true
  }
}
