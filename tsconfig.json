{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "forceConsistentCasingInFileNames": false,
    "jsx": "preserve",
    "tsBuildInfoFile": ".tsbuildinfo/tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": false
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx", "**/*.test.ts"],
  "exclude": [
    "node_modules",
    ".next/cache/**/*",
    "amplify/**/*",
    ".amplify/**/*",
    "dist/**/*",
    "build/**/*",
    "packages/image-optimization/**/*",
    "packages/email/**/*",
    "packages/mock/**/*",
    "packages/lambda-edge-host-rewriter/**/*",
    "packages/example-theme/**/*",
    "scripts/**/*"
  ]
}
