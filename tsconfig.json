{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/**/*",
    "components/**/*",
    "context/**/*",
    "hooks/**/*",
    "lib/**/*",
    "middlewares/**/*",
    "renderer-engine/**/*",
    "tenant-domains/**/*",
    "types/**/*",
    "utils/**/*",
    "middleware.ts"
  ],
  "exclude": [
    "node_modules",
    ".next/cache/**/*",
    "amplify/**/*",
    ".amplify/**/*",
    "template/**/*",
    "public/**/*",
    "scripts/**/*",
    "coverage/**/*",
    "dist/**/*",
    "build/**/*",
    "test/**/*",
    "lambda-edge-host-rewriter/**/*"
  ]
}
